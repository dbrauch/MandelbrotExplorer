<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>


<?import javafx.scene.control.Label?>
<AnchorPane fx:id="anchorpane" focusTraversable="true" maxHeight="640" maxWidth="512" minHeight="640.0"
            minWidth="512.0" prefHeight="640.0" prefWidth="512.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
    <Button fx:id="setViewButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#setViewMultiThreaded"
            text="Set Parameters"/>
    <TextField fx:id="xCoordinateText" text="-0.5" layoutX="139.0" layoutY="14.0" onKeyTyped="#checkInputX"
               onKeyPressed="#textEnter" prefHeight="28.0" prefWidth="115.0" promptText="Re(c)"/>
    <TextField fx:id="yCoordinateText" text="0" layoutX="257.0" layoutY="14.0" onKeyTyped="#checkInputY"
               onKeyPressed="#textEnter" prefHeight="28.0" prefWidth="115.0" promptText="Im(c)"/>
    <TextField fx:id="magnifierText" text="0.5" layoutX="375.0" layoutY="14.0" onKeyTyped="#checkInputMagnifier"
               onKeyPressed="#textEnter" prefHeight="28.0" prefWidth="100.0" promptText="magnification (default 1.5)"/>
    <Button fx:id="saveAsPngButton" layoutX="14.0" layoutY="51.0" mnemonicParsing="false" onAction="#saveImage"
            text="Save as PNG"/>
    <ImageView fx:id="img" onScroll="#scrollZoomSetView" onMouseDragged="#imgMouseDrag" onMousePressed="#imgClick"
               fitHeight="512.0" fitWidth="512.0" layoutY="128.0" pickOnBounds="true" preserveRatio="true"
               AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="128.0">
    </ImageView>
    <Label fx:id="fpsLabel" text="fps: " layoutX="14.0" layoutY="80.0" prefHeight="28.0" prefWidth="100.0"/>
</AnchorPane>
